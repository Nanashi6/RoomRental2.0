@model EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<div class="container">
    <h1>Изменение данных пользователя</h1>

    <div class="create-form-container">
        <form asp-action="Create" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-div">
                <label asp-for="UserName" class="control-label">Логин</label>
                <input class="filter-input" class="filter-input" asp-for="UserName" class="form-control" />
            </div>
            <div class="form-div">
                <label asp-for="Email" class="control-label">Email</label>
                <input class="filter-input" type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="form-div">
                <label asp-for="Surname" class="control-label">Фамилия</label>
                <input class="filter-input" type="text" asp-for="Surname" class="form-control" />
            </div>
            <div class="form-div">
                <label asp-for="Name" class="control-label">Имя</label>
                <input class="filter-input" type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-div">
                <label asp-for="Lastname" class="control-label">Отчество</label>
                <input class="filter-input" type="text" asp-for="Lastname" class="form-control" />
            </div>
            <div class="form-div">
                <label asp-for="OrganizationId" class="control-label">Организация</label>
                <select id="select" asp-for="OrganizationId" class="filter-input" asp-items="ViewBag.OrganizationId"></select>
            </div>
            <button type="submit" class="submitButton-index">Изменить</button>
        </form>
    </div>
</div>