@model CreateUserViewModel
@{
    ViewBag.Title = "Добавление пользователя";
}

<div class="container">
    <h1>Добавление пользователя</h1>

    <div class="create-form-container">
        <form asp-action="Create" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-div">
                <label asp-for="UserName" class="control-label">Логин</label>
                <input class="filter-input" class="filter-input" asp-for="UserName" class="form-control" placeholder="Логин" />
            </div>
            <div class="form-div">
                <label asp-for="Email" class="control-label">Email</label>
                <input class="filter-input" type="text" asp-for="Email" class="form-control" placeholder="Электронный адрес" />
            </div>
            <div class="form-div">
                <label asp-for="Surname" class="control-label">Фамилия</label>
                <input class="filter-input" type="text" asp-for="Surname" class="form-control" placeholder="Фамилия" />
            </div>
            <div class="form-div">
                <label asp-for="Name" class="control-label">Имя</label>
                <input class="filter-input" type="text" asp-for="Name" class="form-control" placeholder="Имя" />
            </div>
            <div class="form-div">
                <label asp-for="Lastname" class="control-label">Отчество</label>
                <input class="filter-input" type="text" asp-for="Lastname" class="form-control" placeholder="Отчество" />
            </div>
            <div class="form-div">
                <label asp-for="OrganizationId" class="control-label">Организация</label>
                <select id="select" asp-for="OrganizationId" class="filter-input" asp-items="ViewBag.OrganizationId"></select>
            </div>
            <div class="form-div">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input class="filter-input" type="text" asp-for="Password" class="form-control" placeholder="Пароль" />
            </div>
            <button type="submit" class="submitButton-index">Добавить</button>
        </form>
    </div>
</div>