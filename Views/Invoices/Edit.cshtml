@model RoomRental.Models.Invoice

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Редактирование оплаты</h1>
    <div class="create-form-container">
        <form asp-action="Edit">
            <input type="hidden" asp-for="InvoiceId" />
            <div class="form-div">
                <label asp-for="RentalOrganizationId" class="control-label"></label>
                <select class="filter-input" asp-for="RentalOrganizationId" class="form-control" asp-items="ViewBag.RentalOrganizationId"></select>
            </div>
            <div class="form-div">
                <label asp-for="RoomId" class="control-label"></label>
                <select class="filter-input" asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
            </div>
            <div class="form-div">
                <label asp-for="Amount" class="control-label"></label>
                <input class="filter-input" asp-for="Amount" placeholder="Сумма оплаты" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-div">
                <label asp-for="ConclusionDate" class="control-label"></label>
                <input class="filter-input" asp-for="ConclusionDate" class="form-control" />
                <span asp-validation-for="ConclusionDate" class="text-danger"></span>
            </div>
            <div class="form-div">
                <label asp-for="PaymentDate" class="control-label"></label>
                <input class="filter-input" asp-for="PaymentDate" class="form-control" placeholder="Дата оплаты" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>
            <div class="form-div">
                <label asp-for="ResponsiblePersonId" class="control-label"></label>
                <select class="filter-input" asp-for="ResponsiblePersonId" asp-items="ViewBag.ResponsiblePerson"></select>
            </div>
            <div class="buttons">
                <a class="submitButton-index btn-primary" asp-action="Index">Возврат к списку</a>
                <input class="submitButton-index" type="submit" value="Изменить" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
